<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card3"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_alignEnd="@+id/card3"
    android:layout_alignParentEnd="true"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="10dp"
    cardView:cardBackgroundColor="@android:color/background_light"
    cardView:cardCornerRadius="20dp"
    cardView:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/background_light"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:shadowColor="@android:color/background_light"
            android:text="Graduation"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fontFamily="serif"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:shadowColor="@color/cardview_dark_background"
            android:text="University : NIT Hamirpur"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/background_light"
            android:fontFamily="serif"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:shadowColor="@color/cardview_dark_background"
            android:text="CGPA : 9.18"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


</android.support.v7.widget.CardView>